{
  "name": "twilio-conversations-manager",
  "version": "1.0.0",
  "description": "Full-stack Twilio Conversations API manager with CRUD operations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:client": "cd client && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "install-deps": "npm install && cd client && npm install",
    "install-client": "cd client && npm install",
    "test": "cd client && npm test",
    "heroku-postbuild": "npm run install-client && npm run build",
    "render-postbuild": "npm run install-client && npm run build"
  },
  "keywords": [
    "twilio",
    "conversations",
    "api",
    "crud",
    "express",
    "react"
  ],
  "author": "Fernando Vieira Machado",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
