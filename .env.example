### DEPLOYMENT CONFIGURATION
# Environment: local, render, aws, gcp, heroku
DEPLOYMENT_ENVIRONMENT=local

### Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_INTELLIGENCE_SERVICE_SID=your_twilio_intelligence_service_sid_here

### Twilio Functions (Required for conversation export and intelligence analysis)
TWILIO_FUNCTION_DOMAIN=your-twilio-function-domain.twil.io
TWILIO_FUNCTION_URL=https://your-twilio-function-domain.twil.io/export-conversation

### Segment Configuration
SEGMENT_SPACE_ID=your_segment_space_id_here
SEGMENT_WRITE_KEY=your_segment_write_key_here
SEGMENT_ACCESS_SECRET=your_segment_access_secret_here

### OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1
USE_OPENAI_FUNCTIONS=false

### LOCAL DEVELOPMENT
### ngrok Configuration (optional)
NGROK_DOMAIN=your_ngrok_domain_here
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here

### Server Configuration
PORT=8080
NODE_ENV=development
CLIENT_URL=http://localhost:3000
DEBUG_MODE=true

### RENDER DEPLOYMENT
# Uncomment for Render deployment
#DEPLOYMENT_ENVIRONMENT=render
#RENDER_SERVICE_NAME=your-render-service-name
#DATABASE_URL=postgresql://user:password@host:port/database
#REDIS_URL=redis://user:password@host:port

### AWS DEPLOYMENT
# Uncomment for AWS deployment
#DEPLOYMENT_ENVIRONMENT=aws
#AWS_REGION=us-east-1
#AWS_API_GATEWAY_DOMAIN=your-api-gateway-domain.amazonaws.com
#AWS_WEBSOCKET_DOMAIN=your-websocket-domain.amazonaws.com
#AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.amazonaws.com
#AWS_LAMBDA_FUNCTION_NAME=your-lambda-function-name
#AWS_API_GATEWAY_ID=your-api-gateway-id
#AWS_WEBSOCKET_API_ID=your-websocket-api-id
#AWS_S3_BUCKET=your-s3-bucket-name

### GCP DEPLOYMENT
# Uncomment for GCP deployment
#DEPLOYMENT_ENVIRONMENT=gcp
#GCP_PROJECT=your-gcp-project-id
#GCP_REGION=us-central1
#GCP_SERVICE_NAME=your-cloud-run-service-name
#GCP_FRONTEND_SERVICE=your-frontend-service-name
#GCS_BUCKET=your-gcs-bucket-name

### HEROKU DEPLOYMENT
# Uncomment for Heroku deployment
#DEPLOYMENT_ENVIRONMENT=heroku
#HEROKU_APP_NAME=your-heroku-app-name
#DATABASE_URL=postgresql://user:password@host:port/database
#REDIS_URL=redis://user:password@host:port